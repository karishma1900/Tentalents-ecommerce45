{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "baseUrl": "../../../",  // Ensure that the base URL is correct
    "paths": {
      "@shared/auth": ["libs/shared/auth/src/index.ts"],
      "@shared/config": ["libs/shared/config/src/index.ts"],
      "@shared/constants": ["libs/shared/constants/src/index.ts"],
      "@shared/error": ["libs/shared/error/src/index.ts"],
      "@shared/kafka": ["libs/shared/kafka/src/index.ts"],
      "@shared/logger": ["libs/shared/logger/src/index.ts"],
      "@shared/middlewares": ["libs/shared/middlewares/src/index.ts"],
      "@shared/redis": ["libs/shared/redis/src/index.ts"],
      "@shared/minio": ["libs/shared/minio/src/index.ts"],
      "@shared/email": ["libs/shared/email/src/index.ts"],
      "@shared/swagger": ["libs/shared/swagger/src/index.ts"],
      "@shared/types": ["libs/shared/types/src/index.ts"],
      "@shared/utils": ["libs/shared/utils/src/index.ts"],
      // Correct paths for service imports (include whole src folder)
      "@payment-service/*": ["apps/backend/payment-service/src/app/*"],  // Including all files in the payment-service
      "@order-service/*": ["apps/backend/order-service/src/app/*"]  // Including all files in the order-service
    }
  },
  "include": [
    "src/**/*.ts",
    "../../../libs/shared/**/*.ts",
    "../../../apps/backend/payment-service/src/**/*.ts",  // Ensure payment service files are included
    "../../../apps/backend/order-service/src/**/*.ts"    // Ensure order service files are included
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "../../../node_modules",
    "../../../dist",
    "**/__tests__"
  ]
}
